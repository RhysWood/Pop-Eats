<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" href="/images/hamburger-solid.svg">
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee&family=Montserrat&family=Roboto&family=Sacramento&family=Source+Sans+Pro:wght@600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/main.css" type="text/css"/>
    <link rel="stylesheet" href="/styles/orders.css" type="text/css"/>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <!-- APP JS -->
    <script type="module" src="/scripts/orders.js"></script>
    <title>Orders</title>
  </head>
  <body>
    <%- include('partials/_header') %>
    <main>
      <section class="orders-container">
      </div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Order Number</th>
              <th scope="col">Items</th>
              <th scope="col">Order Date</th>
              <th scope="col">Completed Date</th>
              <th scope="col">Update</th>
            </tr>
          </thead>
          <tbody>
            <% for(let order in orders) { %>
              <% const id = orders[order]['id'] %>
              <tr>
                <form id= "orderDetails" action="/orderdetails/<%= id %>" method="GET">
                <div class="order">
                  <td><%= id %></td>
                  <td><%= orders[order]['start_date'] %></td>
                  <% if(orders[order]['end_date']) { %>
                    <td><%= orders[order]['end_date'] %></td>
                  <% } %>
                </div>
                <td><button id="DetailsButton" type="submit">Order Details</button></td>
              </form>
              <td>
                <% for(let item in items) { %>
                  <% if(items[item]['orderid'] === id) { %>
                    <p><%= items[item]['title'] %></p>
                  <% } %>
                <% } %>
              </td>
              <td>
                <% let sum = 0 %>
                <% for(let item in items) { %>
                  <% if(items[item]['orderid'] === id) { %>
                    <% sum += (items[item]['price'] * items[item]['sum'])  %>
                  <% } %>
                <% } %>
                <% sum = sum.toFixed(2) %>
                <p><%= sum %></p>
              </td>

              </tr>
            <% } %>
          </tbody>
      </div>
    </main>
  </body>
</html>
